{
  "name": "folder-commands",
  "displayName": "Folder Commands",
  "description": "Folder commands for Typescript applications",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrdutton/vscode-folder-commands.git"
  },
  "keywords": [],
  "publisher": "jrdutton",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.folderCommands"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.folderCommands",
        "title": "Folder Commands"
      }
    ],
    "configuration": {
      "properties": {
        "folderCommands.fileExtensionRegex": {
          "type": "string",
          "default": ".tsx?$",
          "description": "Regular expression for file extensions that will be included"
        }
      }
    },
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.folderCommands",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.2",
    "@types/vscode": "^1.41.0",
    "glob": "^7.1.5",
    "mocha": "^10.2.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  }
}
